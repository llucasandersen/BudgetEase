<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/banking_header_background">



    <!-- Main Content -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

        <!-- Title -->
        <TextView
                android:id="@+id/navMenuHelpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:text="Using the Navigation Menu"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />

        <!-- Instructions -->
        <TextView
                android:id="@+id/navMenuHelpInstructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/navMenuHelpTitle"
                android:layout_marginTop="10dp"
                android:text="Swipe right on the left edge of your screen to open the navigation menu. The menu contains shortcuts to important sections: Home, Finances, Settings, and Help. For this tutorial, swipe right and press 'Next Page' in the menu to proceed."
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:paddingHorizontal="20dp" />

        <!-- Example Navigation Menu Layout -->
        <LinearLayout
                android:id="@+id/exampleNavMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/navMenuHelpInstructions"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="@drawable/search_bar_bg"
                android:padding="10dp">

            <!-- Home Item -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_home"
                        android:contentDescription="@string/home_icon"
                        android:padding="8dp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium"
                        android:paddingStart="10dp" />
            </LinearLayout>

            <!-- Finances Item -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_finances"
                        android:contentDescription="@string/finances_icon"
                        android:padding="8dp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Finances"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium"
                        android:paddingStart="10dp" />
            </LinearLayout>

            <!-- Settings Item -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_settings"
                        android:contentDescription="@string/settings_icon"
                        android:padding="8dp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium"
                        android:paddingStart="10dp" />
            </LinearLayout>

            <!-- Help Item -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_edit_profile"
                        android:contentDescription="@string/help_icon"
                        android:padding="8dp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Help"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium"
                        android:paddingStart="10dp" />
            </LinearLayout>

            <!-- Next Page Item -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:focusable="true">

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_menu"
                        android:contentDescription="Next Page" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next Page"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium"
                        android:paddingStart="10dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- Navigation Drawer -->
</androidx.drawerlayout.widget.DrawerLayout>
