<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/banking_header_background"
                android:padding="16dp">

    <!-- Header Icon -->
    <ImageView
            android:id="@+id/icWelcomeIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_finances"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/welcome_icon" />

    <!-- Welcome Text -->
    <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icWelcomeIcon"
            android:layout_marginTop="20dp"
            android:text="Welcome to Budget Ease!"
            android:textSize="28sp"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

    <!-- Subtext -->
    <TextView
            android:id="@+id/subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcomeText"
            android:layout_marginTop="10dp"
            android:text="Let me run you through the basics."
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>

    <!-- Animated Button -->
    <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="30dp"
            android:text="Get Started"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textSize="16sp" />

    <!-- Decorative Element -->
    <ImageView
            android:id="@+id/decorativeImage"
            android:layout_width="395dp"
            android:layout_height="236dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_login_bk"
            android:scaleType="centerCrop"
            android:contentDescription="@string/decorative_footer" android:layout_marginBottom="0dp"/>

</RelativeLayout>
